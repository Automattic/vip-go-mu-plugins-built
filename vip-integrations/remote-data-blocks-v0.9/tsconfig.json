{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "es6",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./build/",
    "paths": {
      "@/*": [ "./src/*" ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "typeRoots": [ "./types", "./node_modules/@types" ],
    "sourceMap": true
  },
  "include": [ "./types/*.d.ts", "./example/**/*", "./src/**/*", "./tests/**/*", "*.config.ts" ]
}
