#!/bin/sh

TASK="${1-stop}"

teardown_redis() {
	echo "ğŸ”½ Shutting down Redis..."
	docker compose -f docker-compose.overrides.yml down
}

teardown_wordpress() {
	if [ "$TASK" = "destroy" ]; then
		npx wp-env destroy
		echo "ğŸ‘‹ Run \`npm run dev\` to recreate."
	else
		npx wp-env stop
		echo "â¹ï¸ Rerun \`npm run dev\` to resume or \`npm run dev:destroy\` to clean up."
	fi
}

# Kill any lingering Node.js processes.
pkill -f 'remote-data-blocks/node_modules/'

teardown_redis
teardown_wordpress
